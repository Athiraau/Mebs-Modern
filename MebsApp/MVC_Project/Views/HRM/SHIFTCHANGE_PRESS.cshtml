                selectemp.add(optionElement);
            });

        }
        function formatDataAsArray1(data) {
            if (Array.isArray(data) && data.length > 0) {
                return data.map(item => ({
                    value: item["EID"],
                    label: item["ENAME"]
                }));
            } else {
