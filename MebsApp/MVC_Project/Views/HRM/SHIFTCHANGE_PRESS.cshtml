        function submitfunction() {


            if (!validates()) {
                return false;
            }

            const Session_emp = '@ViewData["EmpCode"]';
            var brid = '@ViewData["BrID"]';



            var EmpCode = document.getElementById('emp_code').value;
            var shift_id = document.getElementById('shiftchange').value;

            var dt = document.getElementById("fdate").value;
            var eff_Date = fetchDate(dt);

            var indata = EmpCode + "~" + shift_id + "~" + eff_Date + "~" + Session_emp;

            PostDataAPICall(indata);


        }
        function PostDataAPICall(indata) {


            indata = "PROC_HRMS_COMMON_MVC" + "^" + 1 + "~" + 10 + "~" + indata;

            var _link = '';
            if (document.location.hostname == 'localhost') { _link = "/HRM/getAPIData"; }
            else { var root = '@ViewData["root"]'; _link = "/" + root + "/HRM/getAPIData"; }

            const a = "";
            $.ajax({
                type: "GET",
                url: _link,
                data: { datas: indata },
                async: false,
                success: function (response) {


                    result = JSON.parse(response);
                    result = result[0].RESULT;
                    v_alert(result);

                },
                error: function (response) {
                    check = 0;
                    alert("failed");
                }
            });
        }
        function fetchDate(dt) {
            var getdate = dt;

            const months = ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'];

            const [year, month, day] = getdate.split("-");
            const formattedMonth = months[parseInt(month, 10) - 1];
            const formattedDate = `${day}-${formattedMonth}-${year}`;
            return formattedDate;
        }

        function reportfunction() {

            var dt = document.getElementById("fdate").value;
            var eff_Date = fetchDate(dt);
            window.open('SHIFCHANGEREPORT?eff_Date=' + eff_Date, "_blank");
            return false;
        }

        function resetForm() {
            var root = '';
            var baselink = '@ViewData["baseurl"]';
            var id = '@ViewData["HeadName"]';

            if (document.location.hostname == 'localhost') {
                window.location.href = "/HRM/SHIFTCHANGE_PRESS?datas=" + id;
            }
            else {
                root = '@ViewData["root"]';
                domainurl = baselink + root;
                window.location.href = domainurl + "/HRM/SHIFTCHANGE_PRESS?datas=" + id;
            }


        }


        //---------alert----------------------//

        function v_alert(res) {

            if (res == "SUCESSFULLY ADDED TO CHANGE SHIFT") {

                Swal.fire({
                    text: 'SUCESSFULLY ADDED TO CHANGE SHIFT..!!!',
                    icon: 'success',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        resetForm();
                    }
                });
            }
            if (res == "SUCESSFULLY UPDATED TO CHANGE SHIFT") {

                Swal.fire({
                    text: 'SUCESSFULLY UPDATED TO CHANGE SHIFT..!!!',
                    icon: 'success',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        resetForm();
                    }
                });
            }

            if (res == "YOU ARE NOT ALLOWED TO CHANGE SHIFT ON THIS DATE") {

                Swal.fire({
                    text: 'YOU ARE NOT ALLOWED TO CHANGE SHIFT ON THIS DATE.!!!',
                    icon: 'warning',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        resetForm();
                    }
                });
            }
            if (res == "FAILED TO CHANGE SHIFT") {

                Swal.fire({
                    text: 'FAILED TO CHANGE SHIFT.!!!',
                    icon: 'error',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        resetForm();
                    }
                });
            }

        }

        //---------VALIDATION----------------------//

       
        function validates() {
            //  DTValidation();
            var selectemp = document.getElementById('emp_code');
            var selectshift = document.getElementById('shiftchange');
            const fdate = document.getElementById('fdate').value.trim();


            if (!validateSelect(selectemp)) {
                Swal.fire({
                    text: 'Please select a Employee..!!!',
                    icon: 'warning',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        return false;
                    }
                });

            }
            else if (!validateSelect(selectshift)) {

                Swal.fire({
                    text: 'Please select a shift..!!!',
                    icon: 'warning',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        return false;
                    }
                });

            }
            else if (!fdate) {
                Swal.fire({
                    text: 'Please Select Effective Date..!!!',
                    icon: 'warning',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        return false;
                    }
                });

            }
            else {
                return true;
            }

        }

        function validateSelect(select) {
            if (select.selectedIndex === 0) {
                return false;
            }
            return true;
        }


        //--------------------Exit--------------------//

        function loadIndex() {

            var root = '';
            var baselink = '@ViewData["baseurl"]';
            var id = '@ViewData["HeadName"]';

            if (document.location.hostname == 'localhost') {
                window.location.href = "/HRM/Index?datas=" + id;
            }
            else {
                root = '@ViewData["root"]';
                domainurl = baselink + root;
                window.location.href = domainurl + "/HRM/Index?datas=" + id;
            }

        }
