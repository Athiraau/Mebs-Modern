        function resetForm() {
            var root = '';
            var baselink = '@ViewData["baseurl"]';
            var id = '@ViewData["HeadName"]';

            if (document.location.hostname == 'localhost') {
                window.location.href = "/HRM/TODAYSHIFTCHANGE?datas=" + id;
            }
            else {
                root = '@ViewData["root"]';
                domainurl = baselink + root;
                window.location.href = domainurl + "/HRM/TODAYSHIFTCHANGE?datas=" + id;
            }


        }


        //---------alert----------------------//

        function v_alert(res) {

            if (res == "SUCESSFULLY UPDATED TO CHANGE SHIFT") {

                Swal.fire({
                    text: 'SUCCESSFULLY UPDATED TO CHANGE SHIFT..!!!',
                    icon: 'success',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        resetForm();
                    }
                });
            }

            if (res == "Already in same Shift..") {

                Swal.fire({
                    text: 'Already in same Shift...!!!',
                    icon: 'warning',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        resetForm();
                    }
                });
            }
            if (res == "YOU ARE NOT ALLOWED TO CHANGE SHIFT ON THIS DATE") {

                Swal.fire({
                    text: 'YOU ARE NOT ALLOWED TO CHANGE SHIFT ON THIS DATE..!!!',
                    icon: 'warning',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        resetForm();
                    }
                });
            }

        }

        //---------VALIDATION----------------------//


        function validates() {
            //  DTValidation();
            var selectemp = document.getElementById('emp_code');
            var selectshift = document.getElementById('shiftchange');
           

            if (!validateSelect(selectemp)) {
                Swal.fire({
                    text: 'Please select an Employee..!!!',
                    icon: 'warning',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        return false;
                    }
                });
               
            }
            else if (!validateSelect(selectshift)) {
               
                Swal.fire({
                    text: 'Please select a shift..!!!',
                    icon: 'warning',
                    confirmButtonText: 'OK',
                    customClass: 'swal-wide'
                }).then((result) => {
                    if (result.isConfirmed) {
                        return false;
                    }
                });
              
            }
            else{
                return true;
            }
            
        }

        function validateSelect(select) {
            if (select.selectedIndex === 0) {
                return false;
            }
            return true;
        }

        
