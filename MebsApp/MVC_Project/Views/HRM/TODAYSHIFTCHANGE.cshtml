                }
            });

        }
        function LoadDropDown1(data) {
            var ShiftDrop = document.getElementById('shiftchange');

            const options = formatDataAsArray2(data);
            ShiftDrop.innerHTML = '';
            options.forEach(option => {
                const optionElement = document.createElement('option');

                optionElement.value = option.value;
                optionElement.text = option.label;
                ShiftDrop.add(optionElement);
            });
        }
        function formatDataAsArray2(data) {
            if (Array.isArray(data) && data.length > 0) {
                return data.map(item => ({
                    value: item["IN_TIME"],
                    label: item["SNAME"]
                }));
            } else {
                return [];
            }
        }


        var selectemp = document.getElementById('emp_code');
        var a = "";
        selectemp.onchange = function () {

            a = document.getElementById('emp_code').value;

            if (a == "-1") {

                document.getElementById('emp_name').value = "";
                document.getElementById('department').value = "";
                document.getElementById('designation').value = "";
                document.getElementById('post').value = "";
                document.getElementById('date').value = "";
                document.getElementById('shift').value = "";

            } else {
                callAPIResponse2();

            }



        }
        function callAPIResponse2() {

            const session = '@ViewData["EmpCode"]';
            var brid = '@ViewData["BrID"]';



            var EmpCode = document.getElementById('emp_code').value;

            var _link = '';
            if (document.location.hostname == 'localhost') { _link = "/HRM/getAPIData"; }
            else { var root = '@ViewData["root"]'; _link = "/" + root + "/HRM/getAPIData"; }

            indata = "PROC_HRMS_COMMON_MVC" + "^" + 1 + "~" + 2 + "~" + EmpCode + "~" + brid;
           
            var response = '';
            $.ajax({
                type: "GET",
                url: _link,
                data: { datas: indata },
                async: false,
                success: function (response) {
                    const Edetails = JSON.parse(response);
                    LoadEmployeeDetails(Edetails);
                },
                error: function (response) {
                }
            });
        }
        function LoadEmployeeDetails(Edetails) {
            // initializing Values to the variables

            EmployeeName = Edetails[0].EMP_NAME;
            Department = Edetails[0].DEP_NAME;
            Post = Edetails[0].POST_NAME;
            Designation = Edetails[0].DESIGNATION;
            shift = Edetails[0].SHIFT;
            v_date = Edetails[0].V_DATE;

            // initializing Values to the textbox

            document.getElementById('emp_name').value = EmployeeName;
            document.getElementById('designation').value = Designation;
            document.getElementById('department').value = Department;
            document.getElementById('post').value = Post;
            document.getElementById('shift').value = shift;
            document.getElementById('date').value = v_date;

        }


        function submitfunction() {


            if (!validates()) {
                return false;
            }

            const Session_emp = '@ViewData["EmpCode"]';
            var brid = '@ViewData["BrID"]';

            var EmpCode = document.getElementById('emp_code').value;
            var shift_id = document.getElementById('shiftchange').value;
            var indata = EmpCode + "~" + shift_id + "~" + Session_emp;
            
            PostDataAPICall(indata);
          

        }
