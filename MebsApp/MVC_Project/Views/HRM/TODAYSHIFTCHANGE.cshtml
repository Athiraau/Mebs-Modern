    <script>
        window.onload = function OnloadFunction() {

            callAPIauthorization();

        }

        function callAPIauthorization() {



            const EmpCode = '@ViewData["EmpCode"]';
            var brid = '@ViewData["BrID"]';
            var _link = '';
            if (document.location.hostname == 'localhost') { _link = "/HRM/getAPIData"; }
            else { var root = '@ViewData["root"]'; _link = "/" + root + "/HRM/getAPIData"; }

            indata = "PROC_HRMS_COMMON_MVC" + "^" + 1 + "~" + 5 + "~" + EmpCode + "~" + brid;

            var response = '';
            $.ajax({
                type: "GET",
                url: _link,
                data: { datas: indata },
                async: false,
                success: function (response) {

                    result = JSON.parse(response);
                    result = result[0].RESULT;


                    if (result == '111') {

                        callAPIResponse();
                        callAPIResponse1();
                    }
                    else {

                        Swal.fire({
                            text: 'You are not authorized to change Shift.!!!',
                            icon: 'error',
                            confirmButtonText: 'OK',
                            customClass: 'swal-wide'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                loadIndex();
                            }
                        });
                    }
                },
                error: function (response) {
                    alert("failed");
                }
            });
        }

        function callAPIResponse() {

           

            const EmpCode = '@ViewData["EmpCode"]';
            var brid = '@ViewData["BrID"]';
            var _link = '';
            if (document.location.hostname == 'localhost') { _link = "/HRM/getAPIData"; }
            else { var root = '@ViewData["root"]'; _link = "/" + root + "/HRM/getAPIData"; }

            indata = "PROC_HRMS_COMMON_MVC" + "^" + 1 + "~" + 1 + "~" + EmpCode + "~" + brid;
